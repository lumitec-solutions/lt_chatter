<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="email_compose_message_wizard_form" model="ir.ui.view">
        <field name="model">mail.compose.message</field>
        <field name="inherit_id" ref="mail.email_compose_message_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='subject']" position="before">
                <field name="email_to"
                       attrs="{'invisible': ['|',('model','!=', 'crm.lead'),('is_partner', '=',True)]}"/>
                <field name="is_partner" invisible="1"/>

            </xpath>
            <xpath expr="//field[@name='partner_ids']" position="attributes">
                <attribute name="attrs">{'invisible':[('is_partner','=', False)]}</attribute>
            </xpath>
            <xpath expr="//span[@name='document_followers_text']" position="attributes">
                <attribute name="attrs">{'invisible':[('is_partner','=', False)]}</attribute>
            </xpath>
            <xpath expr="//label[@for='partner_ids']" position="attributes">
                <attribute name="attrs">{'invisible':[('is_partner','=', False)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
